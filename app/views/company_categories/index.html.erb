<section id="page-title-wrapper" class="section page-title-wrapper">
            <div class="container">
                <div class="row">
                    <div class="col-xs-12 col-sm-6 col-md-6 page-title">
                        <h4>Event Categories</h4>
                    </div>
                    <!-- /.page-title -->
                    
                    <!-- /.breadcrumb-wrapper -->
                </div>
                <!-- /.row -->
            </div>
            <!-- /.container -->
</section>
<section id="faqs" class="section faqs">
    <div class="container">
        <div class="col-md-2 content-wrapper"></div>
            <div class="col-md-8 content-wrapper">
                <div class="special-wrapper wrapper-1">
                <h5 class="subpage-title">Categories that Affect You</h5>
                    <% @company_categories.each do |category| %>
                        <%= category.category.name %>
                        
                            <div class="progress">
                                <div class="progress">
                                    <div class="progress-bar progress-bar-<%=category.progress_color  %>" role="progressbar" 
                                    aria-valuenow= "<%= category.width %> " aria-valuemin="0" aria-valuemax="100" 
                                    style= "width: <%= category.width %>%; ">
                                    </div>
                                </div>
                            </div>

                    <% end %>
                </div>
                <%= link_to "Update", "/companycategories", method: :delete, :class => "btn btn-flat flat-info" %>
        <div class="col-md-2 content-wrapper"></div>
    </div>
</section>
