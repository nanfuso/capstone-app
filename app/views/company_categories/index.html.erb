<section id="faqs" class="section faqs">
    <div class="container">
        <div class="row">
        <div class="col-md-2 content-wrapper"></div>
            <div class="col-md-8 content-wrapper">
                <div class="special-wrapper wrapper-1">
                <h3 class="subpage-title">Event Categories</h3>
                    <%= form_tag '/companycategories', method: :post do %>
                        <table class="table">
                            <thead>
                            <tr class="info">
                                <th>Category </th>
                                <th>Which Events Will Affect You?</th>
                            </tr>
                            </thead>
                                <%= collection_check_boxes(:category, :category_id, Category.all, :id, :name, include_hidden: false) do |b| %>
                                <tr>
                                    <h4><td><%= b.label %></td>
                                    <td><%= b.check_box %></td></h4>
                               </tr> 
                                <% end %>
                            </div>
                        </table>
                                <%= submit_tag 'Submit', :class => "btn btn-flat flat-inverse" %>
                    <% end %>
                </div>
            </div>
        <div class="col-md-2 content-wrapper"></div>
        </div>
    </div>
</section>
