                <!-- /.row -->
            </div>
            <!-- /.container -->
</section>
<section id="faqs" class="section faqs">
    <div class="container">
        <div class="row">
        <div class="col-md-2 content-wrapper"></div>
            <div class="col-md-8 content-wrapper">
                <div class="special-wrapper wrapper-1">
                <h5 class="subpage-title">What Types of Events will Affect You?</h5>
                    <%= form_tag '/companycategories', method: :post do %>
                        <table class="table">
                            <thead >
                                <tr class="info">
                                    <th>Category</th>
                                    <th>0</th>
                                    <th>1</th>
                                    <th>2</th>
                                    <th>3</th>
                                    <th>4</th>
                                    <th>5</th>
                                </tr>
                            </thead>
                            <% @categories.each do |category| %>
                                <% if category.name %>
                                <tr>
                                  <td><h4><%= category.name %></td></h4>
                                  <td><input type="radio" name="relevance[<%= category.id %>]" value="0" checked="checked"></td>
                                  <td><input type="radio" name="relevance[<%= category.id %>]" value="1"></td>
                                  <td><input type="radio" name="relevance[<%= category.id %>]" value="2"></td>
                                  <td><input type="radio" name="relevance[<%= category.id %>]" value="3"></td>
                                  <td><input type="radio" name="relevance[<%= category.id %>]" value="4"></td>
                                  <td><input type="radio" name="relevance[<%= category.id %>]" value="5"></td>
                                </tr>
                                <% end %>
                            <% end %>
                        </table>
                    <%= submit_tag 'Submit', :class => "btn btn-flat flat-inverse" %>
                    <% end %>
                </div>
            </div>
        <div class="col-md-2 content-wrapper"></div>
        </div>
    </div>
</section>
